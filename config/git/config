[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red bold reverse
	newNormal = green
	newHighlight = green bold reverse
[diff]
	compactionHeuristic = true
[color "diff"]
	meta = magenta
	frag = magenta bold
	commit = magenta bold
	old = red
	new = green
	whitespace = red reverse
[diff-so-fancy]
	markEmptyLines = false
	stripLeadingSymbols = false
[pager]
	diff = diff-so-fancy | less --tabs=4 -RFXmi
[alias]
	graph = foresta --style 10 -n 10
	align-date = rebase --ignore-date
	fix-author = commit --amend --no-edit --reset-author
	temp = commit -anm 'wip [skip ci]'
	summary = diff --compact-summary remotes/origin/HEAD
	list-branches = branch --format='%(HEAD)%(align:2)%(upstream:trackshort)%(end) %(refname:short)'
	push-f = push --force-with-lease
	up = !gitup
[ghq]
	root = ~/src
[includeIf "gitdir:~/src/org1/"]
	path = org1.conf
[credential]
	helper = osxkeychain
[branch]
	autoSetupMerge = true
