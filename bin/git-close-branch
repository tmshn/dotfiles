#!/bin/sh

set -o errexit
set -o nounset

prev="$(git symbolic-ref --short HEAD)"
if [ "${prev}" != 'master' ]; then
    git checkout master
fi

git pull -p

git branch --format='%(refname:short) %(upstream:track)' \
| grep ' \[gone\]$' \
| sed 's/ \[gone\]$//g' \
| while read -r branch; do
    git branch -D "${branch}"
done
